{
  "name": "elderly-care",
  "private": true,
  "dependencies": {
    "@hotwired/turbo-rails": "^7.0.0-beta.5",
    "@rails/actioncable": "^6.0.0",
    "@rails/activestorage": "^6.0.0",
    "@rails/ujs": "^6.0.0",
    "@rails/webpacker": "5.2.1",
    "esbuild-loader": "^2.8.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "stimulus": "^2.0.0"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@open-wc/eslint-config": "^4.2.0",
    "@open-wc/testing": "^2.5.32",
    "@web/dev-server": "^0.1.5",
    "@web/dev-server-storybook": "^0.3.5",
    "@web/test-runner": "^0.12.7",
    "@webpack-cli/serve": "^1.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "start": "web-dev-server",
    "lint": "eslint --ext .js,.html ./app --ignore-path .gitignore && prettier \"./app/**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html ./app --fix --ignore-path .gitignore && prettier \"./app/**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "web-dev-server -c .storybook/server.mjs",
    "storybook:build": "build-storybook"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 8
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
