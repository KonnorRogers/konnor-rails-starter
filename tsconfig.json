{
  "include": ["app/assets/**/*"],
  "compilerOptions": {
    "baseUrl": ".",

    "target": "es2017",
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
